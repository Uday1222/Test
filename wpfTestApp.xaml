<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Selection and Upload" Height="350" Width="500">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Browse" Width="80" Height="30" Click="BrowseButton_Click" Background="Blue" Foreground="White"/>
            <TextBox x:Name="filePathTextBox" Margin="0,10,0,0" IsReadOnly="True" />
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Upload" Width="80" Height="30" Click="UploadButton_Click" Background="Blue" Foreground="White"/>
                <Button Content="Cancel" Width="80" Height="30" Click="CancelButton_Click" Background="Blue" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
